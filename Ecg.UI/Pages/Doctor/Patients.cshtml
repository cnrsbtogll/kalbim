@page
@model Ecg.UI.Pages.Doctor.PatientsModel
@{
    ViewData["Title"] = "Patients";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Tüm Hastalar</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table id="patient" class="table table-bordered table-striped dataTable dtr-inline collapsed" role="grid" aria-describedby="example1_info">
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>


@section scripts{

    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    @*<script src="~/js/doctor/allpatients.js"></script>*@
    <!-- page script -->
    <script>
        $(function () {
            $("#patient").DataTable({
                "responsive": true,
                "autoWidth": true,
                "searching": true,
                "serverSide": false
                ,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
                },
                ajax: {
                    url: '/doctor/GetPatients',
                    /*success: function (data, textStatus, jqXHR) {
                        console.log(data);
                    },*/
                    dataSrc: function (json) {
                        console.log(json);
                        /* var return_data = new Array();

                         console.log(json);
                         console.log(json.data.length);
                         for (var i = 0; i < json.data.length; i++) {
                             return_data.push({
                                 'name': json.data[i].name
                             })
                         }*/
                        return json;
                    },
                    type: 'get'
                },
                columns: [
                    {
                        data: "patientDetails.firstName",
                        title: "Adı"
                    },
                    {
                        data: "patientDetails.lastName",
                        title: "Soyadı"
                    }
                    ,
                    {
                        data: "patientDetails.gender",
                        title: "Cinsiyet"
                    },
                    {
