@page
@model Ecg.UI.Pages.Doctor.PatientDetailsModel
@{

}
<link href="~/css/patientsdetails.css" rel="stylesheet" />
<div id="app" class="card">
    <div id="datas">
        <div class="card-header">
            <h1 class="card-title">Hasta Detayları</h1>
        </div>
        <br />
        <h3>Hasta Bilgileri</h3>


        <div class="row">
            <div class="column col-md-3">
                <div class="card">
                    <h4>Ad</h4>
                    <p>{{patientDetails.Name}}</p>
                </div>
            </div>

            <div class="column col-md-3">
                <div class="card">
                    <h4>Soyad</h4>
                    <p>{{patientDetails.LastName}}</p>

                </div>
            </div>

            <div class="column col-md-3">
                <div class="card">
                    <h4>Doğum Tarihi</h4>
                    <p>{{patientDetails.BirthDay}}</p>

                </div>
            </div>

            <div class="column col-md-3">
                <div class="card">
                    <h4>Kilo</h4>
                    <p>{{patientDetails.Weight}}</p>

                </div>
            </div>

        </div>
        <!-- /.card-header -->

    </div>
    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table id="patient" class="table table-bordered table-striped dataTable dtr-inline collapsed" role="grid" aria-describedby="example1_info">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- /.card-header -->
<!-- /.card-body -->

@section scripts{
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    @*<script src="~/lib/vue/vue.min.js"></script>
        <script src="~/lib/axios/axios.min.js"></script>*@
    @*<script src="~/js/doctor/patient-details.js"></script>*@
    <!-- page script -->
    <script>
        var app = new Vue({
            el: '#app',
            data: {
                patientDetails: {
                    Name: '',
                    LastName: '',
                    BirthDay: '',
                    Weight: ''
                }
            }
        });

        Vue.config.devtools = true;

        var datas = {
            name: '',
            lastName: '',
            birthDay: '',
            weight: ''
        }

        $(function () {
            var measurementId;


            $("#patient").DataTable({
                "responsive": true,
                "autoWidth": true,
                "searching": true,
                "serverSide": false
                ,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
                },
                ajax: {
                    url: '/doctor/GetPatient?id=@Model.patientId&olcOrder=',
                    dataSrc: function (json) {
                        console.log(json)
                        app._data.patientDetails.BirthDay = json.result.birthDay;
                        app._data.patientDetails.Name = json.result.name;
                        app._data.patientDetails.LastName = json.result.lastName;
                        app._data.patientDetails.Weight = json.result.weight;

                       // app._data.patientDetails = datas;

                        return json.result.diagnoses;
                    },
                    type: 'get'
                },
                columns: [
                    {
                        data: "measurementId",
                        title: "Ölçüm",
                        render: function (data, type, full, meta) {
                            measurementId = data;
                            return data;
                        }
                    },
                    {
                        data: "status",
                        title: "Tanı"
                    },
                    {
                        data: "doctor",
                        title: "Doktor"
                    },
                    {
                        data: "diognasisDate",
                        title: "Ölçüm Tarihi"
                    }
                    ,
                    {
                        data: "diognasisTime",
                        title: "Ölçüm Saati"
                    }
                    ,
                    {
                        data: "olcOrder",
                        // targets: -1,
                        title: 'Ekg Göster',
                        //orderable: false,
                        render: function (data, type, full, meta) {
                            //console.log(data);
                            return `
                            <a href="ecgShow?uid=@Model.patientId&olcid=`+ measurementId + `&olcOrder=` + data+`" class="btn btn-primary">Ekg Göster</a>
                            `;
                        }
                    }

                ],
            });

            console.log(datas);

        })





    </script>
}
